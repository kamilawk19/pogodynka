{% extends 'base.html.twig' %}

{% block title %}Weather{% endblock %}

{% block body %}
    <h1>Weather</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ weather.id }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ weather.time ? weather.time|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Pressure</th>
                <td>{{ weather.pressure }}</td>
            </tr>
            <tr>
                <th>Visibility</th>
                <td>{{ weather.visibility }}</td>
            </tr>
            <tr>
                <th>Wind_speed</th>
                <td>{{ weather.windSpeed }}</td>
            </tr>
            <tr>
                <th>Wind_deg</th>
                <td>{{ weather.windDeg }}</td>
            </tr>
            <tr>
                <th>Clouds</th>
                <td>{{ weather.clouds }}</td>
            </tr>
            <tr>
                <th>Humidity</th>
                <td>{{ weather.humidity }}</td>
            </tr>
            <tr>
                <th>Temp_max</th>
                <td>{{ weather.tempMax }}</td>
            </tr>
            <tr>
                <th>Temp_min</th>
                <td>{{ weather.tempMin }}</td>
            </tr>
            <tr>
                <th>Temp_avg</th>
                <td>{{ weather.tempAvg }}</td>
            </tr>
            <tr>
                <th>Weather_description</th>
                <td>{{ weather.weatherDescription }}</td>
            </tr>
            <tr>
                <th>Weather_name</th>
                <td>{{ weather.weatherName }}</td>
            </tr>
            <tr>
                <th>Timezone</th>
                <td>{{ weather.timezone }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ weather.location }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_measurement_index') }}">back to list</a>

    <a href="{{ path('app_measurement_edit', {'id': weather.id}) }}">edit</a>

    {{ include('measurement/_delete_form.html.twig') }}
{% endblock %}
