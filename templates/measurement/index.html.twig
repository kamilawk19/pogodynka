{% extends 'base.html.twig' %}

{% block title %}Weather index{% endblock %}

{% block body %}
    <h1>Weather index</h1>

    <a href="/index.php/location">Link for Location Entity</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Time</th>
                <th>Pressure</th>
                <th>Visibility</th>
                <th>Wind_speed</th>
                <th>Wind_deg</th>
                <th>Clouds</th>
                <th>Humidity</th>
                <th>Temp_max</th>
                <th>Temp_min</th>
                <th>Temp_avg</th>
                <th>Weather_description</th>
                <th>Weather_name</th>
                <th>Timezone</th>
                <th>Location<th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for weather in weather %}
            <tr>
                <td>{{ weather.id }}</td>
                <td>{{ weather.time ? weather.time|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ weather.pressure }}</td>
                <td>{{ weather.visibility }}</td>
                <td>{{ weather.windSpeed }}</td>
                <td>{{ weather.windDeg }}</td>
                <td>{{ weather.clouds }}</td>
                <td>{{ weather.humidity }}</td>
                <td>{{ weather.tempMax }}</td>
                <td>{{ weather.tempMin }}</td>
                <td>{{ weather.tempAvg }}</td>
                <td>{{ weather.weatherDescription }}</td>
                <td>{{ weather.weatherName }}</td>
                <td>{{ weather.timezone }}</td>
                <td>{{ weather.location }}</td>
                <td>
                    <a href="{{ path('app_measurement_show', {'id': weather.id}) }}">show</a>
                    <a href="{{ path('app_measurement_edit', {'id': weather.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_measurement_new') }}">Create new</a>
{% endblock %}
